<%- include('../partials/header') %>
    <div class="container">
        <div class="row mt-5">

            <div class="row">
                <div class="col-md-4 mb-3">
                    <a href="/" class="btn btn-sm btn-info text-light">Inicio</a>
                </div>
            </div>
            <div class="mx-auto col-sm-9 col-md-6 col-lg-5 col-xl-4">
                <form id="formEditar" class="w-100 border rounded p-3" action="#" data-id="<%= id  %>">
                    <h2 class="text-center">Editar Pedido</h2>
                    <hr>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre Pedido</label>
                        <input type="text"  id="nombre" class="form-control" id="nombre">
                    </div>
                    <div class="mb-3">
                        <label for="horaPedido" class="form-label">Hora de Pedido</label>
                        <input type="time" class="form-control" id="nombrePedido" name="nombrePedido">
                    </div>
                    <div class="mb-3">
                        <label for="nroMesa" class="form-label">Numero Mesa</label>
                        <input type="number" class="form-control" id="nroMesa" name="nroMesa">
                    </div>
                    <button type="submit" class="btn btn-warning w-100">
                        Editar
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/editar_pedido.js"></script>


    <%- include('../partials/footer') %>