<%- include('../partials/header')  %>

    <div class="container mt-5">
        <div class="row">

            <div class="row mb-2">
                <div class="col-md-5">
                    <a href="/" class="btn btn-sm btn-info text-light">Inicio</a>
                </div>
            </div>
            
            <div class="mx-auto col-sm-9 col-md-6 col-lg-5 col-xl-4">
                <form action="#" id="formNuevoPedido" class="rounded border p-3">
                    <h2 class="text-center">Editar Pedido</h2>
                    <hr>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text"  id="nombrePedido" class="form-control" id="nombrePedido">
                    </div>
                    <div class="mb-3">
                        <label for="horaPedido" class="form-label">Hora de Pedido</label>
                        <input type="time" class="form-control" id="horaPedido" name="horaPedido">
                    </div>
                    <div class="mb-3">
                        <label for="numero" class="form-label">Numero Mesa</label>
                        <input type="number" class="form-control" id="nroMesa" name="nroMesa">
                    </div>
                    <button type="submit" class="btn btn-warning w-100">
                        Crear
                    </button>
                </form>
            </div>
        </div>
    </div>


    <script src="/js/crear_pedido.js"></script>
<%- include('../partials/footer')  %>
